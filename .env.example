# TinyDB Configuration
# The database file is excluded from version control
# Run 'python app/db_init.py' to initialize the database with seed data
# For production, consider setting this to a different path
TINYDB_PATH=./data/chatbot_db.json

# LangFlow Configuration
LANGFLOW_API_URL=http://localhost:7860/api/v1/predict

# LLM Configuration
LLM_API_KEY=your_openai_api_key_here
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini

# Server Configuration
PORT=8000
HOST=0.0.0.0
DEBUG=True  # Set to False in production

# Session Configuration
SESSION_EXPIRY_MINUTES=60  # How long a chat session remains active 